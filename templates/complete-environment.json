{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "sit",
        "uat",
        "pre-prod",
        "prod"
      ],
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "projectName": {
      "type": "string",
      "defaultValue": "bragi",
      "metadata": {
        "description": "Project name prefix"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "defaultValue": "sqladmin",
      "metadata": {
        "description": "SQL Server administrator login"
      }
    },
    "sqlAdministratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server administrator password"
      }
    },
    "appServiceSku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "F1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "App Service pricing tier"
      }
    },
    "sqlDatabaseSku": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P4",
        "P6",
        "P11",
        "P15"
      ],
      "metadata": {
        "description": "SQL Database pricing tier"
      }
    },
    "storageSku": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account SKU"
      }
    },
    "enablePublicNetworkAccess": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable public network access for SQL Server"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id, parameters('environment'))]",
    "appServiceName": "[concat(parameters('projectName'), '-app-', parameters('environment'), '-', variables('uniqueSuffix'))]",
    "appServicePlanName": "[concat(parameters('projectName'), '-plan-', parameters('environment'), '-', variables('uniqueSuffix'))]",
    "storageAccountName": "[concat(parameters('projectName'), 'stg', parameters('environment'), variables('uniqueSuffix'))]",
    "sqlServerName": "[concat(parameters('projectName'), '-sql-', parameters('environment'), '-', variables('uniqueSuffix'))]",
    "vnetName": "[concat(parameters('projectName'), '-vnet-', parameters('environment'), '-', variables('uniqueSuffix'))]",
    "metaDatabaseName": "[concat(parameters('projectName'), '-meta-', parameters('environment'))]",
    "dwhDatabaseName": "[concat(parameters('projectName'), '-dwh-', parameters('environment'))]",
    "addressPrefix": "10.0.0.0/16",
    "appServiceSubnetPrefix": "10.0.1.0/24",
    "databaseSubnetPrefix": "10.0.2.0/24",
    "storageSubnetPrefix": "10.0.3.0/24",
    "managementSubnetPrefix": "10.0.4.0/24"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2021-05-01",
      "name": "[variables('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "app-service-subnet",
            "properties": {
              "addressPrefix": "[variables('appServiceSubnetPrefix')]",
              "delegations": [
                {
                  "name": "Microsoft.Web.serverFarms",
                  "properties": {
                    "serviceName": "Microsoft.Web/serverFarms"
                  }
                }
              ]
            }
          },
          {
            "name": "database-subnet",
            "properties": {
              "addressPrefix": "[variables('databaseSubnetPrefix')]"
            }
          },
          {
            "name": "storage-subnet",
            "properties": {
              "addressPrefix": "[variables('storageSubnetPrefix')]"
            }
          },
          {
            "name": "management-subnet",
            "properties": {
              "addressPrefix": "[variables('managementSubnetPrefix')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('appServiceSku')]",
        "tier": "[if(equals(parameters('appServiceSku'), 'F1'), 'Free', if(contains(parameters('appServiceSku'), 'B'), 'Basic', if(contains(parameters('appServiceSku'), 'S'), 'Standard', 'Premium'))]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServiceName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|6.0",
          "appSettings": [
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "WEBSITES_ENABLE_HTTPS",
              "value": "true"
            },
            {
              "name": "StorageAccountName",
              "value": "[variables('storageAccountName')]"
            },
            {
              "name": "SqlServerName",
              "value": "[reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName'))).fullyQualifiedDomainName]"
            },
            {
              "name": "MetaDatabaseName",
              "value": "[variables('metaDatabaseName')]"
            },
            {
              "name": "DwhDatabaseName",
              "value": "[variables('dwhDatabaseName')]"
            }
          ],
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "detailedErrorLoggingEnabled": true
        },
        "httpsOnly": true,
        "clientAffinityEnabled": false,
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('storageSku')]",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
      ],
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "allowSharedKeyAccess": true,
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [
            {
              "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'storage-subnet')]",
              "action": "Allow"
            }
          ],
          "ipRules": [],
          "defaultAction": "Deny"
        },
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2021-09-01",
      "name": "[concat(variables('storageAccountName'), '/default/files')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    },
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-11-01",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
      ],
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorLoginPassword')]",
        "version": "12.0",
        "publicNetworkAccess": "[if(parameters('enablePublicNetworkAccess'), 'Enabled', 'Disabled')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2021-11-01",
      "name": "[concat(variables('sqlServerName'), '/AllowAzureServices')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2021-11-01",
      "name": "[concat(variables('sqlServerName'), '/AllowAppServiceSubnet')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "startIpAddress": "10.0.1.0",
        "endIpAddress": "10.0.1.255"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2021-11-01",
      "name": "[concat(variables('sqlServerName'), '/AllowManagementSubnet')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "startIpAddress": "10.0.4.0",
        "endIpAddress": "10.0.4.255"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-11-01",
      "name": "[concat(variables('sqlServerName'), '/', variables('metaDatabaseName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 2147483648,
        "requestedServiceObjectiveName": "[parameters('sqlDatabaseSku')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-11-01",
      "name": "[concat(variables('sqlServerName'), '/', variables('dwhDatabaseName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ],
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 10737418240,
        "requestedServiceObjectiveName": "[parameters('sqlDatabaseSku')]"
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "appServiceName": {
      "type": "string",
      "value": "[variables('appServiceName')]"
    },
    "appServiceUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('appServiceName'))).defaultHostName)]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageConnectionString": {
      "type": "string",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-09-01').keys[0].value, ';EndpointSuffix=', environment().suffixes.storage)]"
    },
    "sqlServerName": {
      "type": "string",
      "value": "[variables('sqlServerName')]"
    },
    "sqlServerFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName'))).fullyQualifiedDomainName]"
    },
    "vnetName": {
      "type": "string",
      "value": "[variables('vnetName')]"
    },
    "vnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
    },
    "metaDatabaseName": {
      "type": "string",
      "value": "[variables('metaDatabaseName')]"
    },
    "dwhDatabaseName": {
      "type": "string",
      "value": "[variables('dwhDatabaseName')]"
    },
    "metaDatabaseConnectionString": {
      "type": "string",
      "value": "[concat('Server=tcp:', reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('metaDatabaseName'), ';Persist Security Info=False;User ID={your_username};Password={your_password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
    },
    "dwhDatabaseConnectionString": {
      "type": "string",
      "value": "[concat('Server=tcp:', reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('dwhDatabaseName'), ';Persist Security Info=False;User ID={your_username};Password={your_password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
    },
    "deploymentSummary": {
      "type": "object",
      "value": {
        "environment": "[parameters('environment')]",
        "projectName": "[parameters('projectName')]",
        "location": "[parameters('location')]",
        "resourcesCreated": [
          "Virtual Network with 4 subnets",
          "App Service Plan",
          "App Service (HTTPS enforced)",
          "Storage Account (HTTPS enforced)",
          "SQL Server (Port 1433 configured)",
          "Meta Database",
          "DWH Database"
        ],
        "securityFeatures": [
          "HTTPS enforced on App Service",
          "HTTPS enforced on Storage Account",
          "SQL Server firewall rules configured",
          "Network segmentation with subnets",
          "TLS 1.2 minimum version",
          "Encryption enabled on storage"
        ]
      }
    }
  }
}
