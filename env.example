# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# Azure AD Authentication (for user login)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-azure-ad-app-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-app-client-secret
AZURE_AD_REDIRECT_URI=http://localhost:8080/login/authorized
AZURE_AD_REDIRECT_URI_PROD=https://your-app-name.azurewebsites.net/login/authorized

# Application Configuration
SECRET_KEY=your-secret-key-for-flask-sessions
FLASK_ENV=development

# Optional: Override default locations
DEFAULT_LOCATION=East US
DEFAULT_PROJECT_NAME=bragi

# App Service Configuration (for Azure deployment)
# These will be set automatically by App Service, but can be overridden
WEBSITES_PORT=8000
SCM_DO_BUILD_DURING_DEPLOYMENT=true
ENABLE_ORYX_BUILD=true
PYTHON_VERSION=3.11
